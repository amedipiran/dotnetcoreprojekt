@model List<Category>


<div class="container">
<div class="row pt-4 pb-3">
    <div class="col-6">
<h2 class="">
    Kategorier
</h2>
    </div>
      <div class="col-6 text-end">
        <a asp-controller="Category" asp-action="Create" class="btn btn-primary my-gradient-btn"><em class="bi bi-plus-circle "></em> Skapa en ny kategori</a>
    </div>
</div>

<table class="table table-bordered table-striped">
    <thead>
    <tr>
        <th>
            Kategorinamn
        </th>
        <th>
            Ordning
        </th>
        <th>Åtgärder</th>
    </tr>
  </thead>
  <tbody>
@foreach(var obj in Model.OrderBy(u=>u.DisplayOrder)){
    <tr>
        <td>
            @obj.Name
        </td>
        <td>
            @obj.DisplayOrder
        </td>
<td>
    <div class="d-flex flex-column flex-md-row justify-content-md-end">
        <a asp-controller="Category" asp-route-id="@obj.Id" asp-action="Edit" class="btn btn-primary my-gradient-btn btn-sm my-1 mx-md-1">
            <em class="bi bi-pencil-square"></em> Ändra
        </a>
        <a asp-controller="Category" asp-action="Delete" asp-route-id="@obj.Id" class="btn btn-danger btn-sm my-1 mx-md-1">
            <em class="bi bi-trash3"></em> Radera
        </a>
    </div>
</td>




    </tr>
    }
  </tbody>
</table>
</div>