@model Product

<form method="post">
    <input asp-for="Id" hidden />

    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Redigera kategori</h2>
           
            <hr>
        </div>
        <div asp-validation-summary="ModelOnly"></div>
        <div class="mb-3 row p-1">
             <label asp-for="Name" class="p-0">Namn:</label>
            <input asp-for="Name" class="form-control">
            <span class="text-danger" asp-validation-for="Name"></span>
        </div>
              <div class="mb-3 row p-1">
             <label asp-for="DisplayOrder" class="p-0">Ordning:</label>
            <input asp-for="DisplayOrder" class="form-control">
            <span class="text-danger" asp-validation-for="DisplayOrder"></span>
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                      <button type="submit" class="btn btn-primary form-control" >Uppdatera</button>
            </div>
            <div class="col-6 col-md-3">
                  <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary border form-control" >Tillbaka</a>
            </div>

        </div>
  
      
    </div>
</form>

<!--Gör så att man kan validera utan att re-rendera sidan med hjälp av JS-->
@section Scripts {
    @{
    <partial name="_ValidationScriptsPartial"/>

    }
}