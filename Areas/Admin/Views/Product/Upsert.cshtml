@model ProductVM

<form method="post" enctype="multipart/form-data">
<input asp-for="Product.Id" hidden>

<div class="row">
  <div class="" >


<div class="border p-3 mt-4">

        <div class="row pb-2">
            <h2 class="text-primary">@(Model.Product.Id!=0?"Redigera":"Lägg till") produkt</h2>
           
            <hr>
        </div>
         <div class="my-5">
      <img src="@Model.Product.ImageUrl" width="100%" style="border-radius:5px; border:1px solid gray;">
    </div>
        <div asp-validation-summary="ModelOnly"></div>
        <div class="mb-3 row p-1">
             <label asp-for="Product.Title" class="p-0">Titel:</label>
            <input asp-for="Product.Title" class="form-control">
            <span class="text-danger" asp-validation-for="Product.Title"></span>
        </div>
              <div class="mb-3 row p-1">
             <label asp-for="Product.Description" class="p-0">Beskrivning:</label>
          <textarea asp-for="Product.Description" class="form-control"> </textarea>
           
        </div>
        

              <div class="mb-3 row p-1">
             <label asp-for="Product.Brand" class="p-0">Märke:</label>
            <input asp-for="Product.Brand" class="form-control">
            <span class="text-danger" asp-validation-for="Product.Brand"></span>
        </div>

          <div class="mb-3 row p-1">
             <label asp-for="Product.Price" class="p-0">Pris:</label>
            <input asp-for="Product.Price" class="form-control">
            <span class="text-danger" asp-validation-for="Product.Price"></span>
        </div>

          <div class="mb-3 row p-1">
             <label asp-for="Product.ListPrice" class="p-0">Pris för 1-50:</label>
            <input asp-for="Product.ListPrice" class="form-control">
            <span class="text-danger" asp-validation-for="Product.ListPrice"></span>
        </div>

          <div class="mb-3 row p-1">
             <label asp-for="Product.Price50" class="p-0">Pris för 50-100:</label>
            <input asp-for="Product.Price50" class="form-control">
            <span class="text-danger" asp-validation-for="Product.Price50"></span>
        </div>

          <div class="mb-3 row p-1">
             <label asp-for="Product.Price100" class="p-0">Pris för 100+:</label>
            <input asp-for="Product.Price100" class="form-control">
            <span class="text-danger" asp-validation-for="Product.Price100"></span>
        </div>

           <div class="mb-3 row p-1">
             <label asp-for="Product.CategoryId" class="p-0">Kategori:</label>
            <select asp-for="Product.CategoryId" asp-items="@Model.CategoryList" class="form-control"> 
                <option disabled selected>--Välj Kategori--</option>
            </select>
            <span class="text-danger" asp-validation-for="Product.CategoryId"></span>
        </div>

               <div class="mb-3 row p-1">
             <label asp-for="Product.ImageUrl" class="p-0">Välj bild:</label>
            <input type="file" name="file" class="form-control">
        </div>

        <div class="row">
            <div class="col-6 col-md-3">
                @if(Model.Product.Id != 0) {
<button type="submit" class="btn btn-primary form-control" >Uppdatera</button>
                } else {
<button type="submit" class="btn btn-primary form-control" >Skapa</button>
                }
                      
            </div>
            <div class="col-6 col-md-3">
                  <a asp-controller="Product" asp-action="Index" class="btn btn-outline-secondary border form-control" >Tillbaka</a>
            </div>

        </div>
  
      
    
    </div>
  </div>
  
   

    
    </div>
</form>


<!--Gör så att man kan validera utan att re-rendera sidan med hjälp av JS-->
@section Scripts {
    <script>
  tinymce.init({
    selector: 'textarea',
    plugins: 'anchor autolink charmap codesample emoticons lists searchreplace table visualblocks wordcount checklist mediaembed casechange export formatpainter pageembed linkchecker a11ychecker tinymcespellchecker permanentpen powerpaste advtable advcode editimage advtemplate ai mentions tinycomments tableofcontents footnotes mergetags autocorrect typography inlinecss',
    toolbar: 'undo redo | blocks fontfamily fontsize | bold italic underline strikethrough | table mergetags | spellcheckdialog a11ycheck typography | align lineheight | checklist numlist bullist indent outdent | emoticons charmap',
    tinycomments_mode: 'embedded',
    tinycomments_author: 'Author name',
    mergetags_list: [
      { value: 'First.Name', title: 'First Name' },
      { value: 'Email', title: 'Email' },
    ],
    ai_request: (request, respondWith) => respondWith.string(() => Promise.reject("See docs to implement AI Assistant")),
  });
</script>
    @{
    <partial name="_ValidationScriptsPartial"/>

    }
}