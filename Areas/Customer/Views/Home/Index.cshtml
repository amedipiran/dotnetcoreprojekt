@model IEnumerable<Product>
@{
    ViewData["Title"] = "Hem";
}


<div class="text-center">
    <h1 class="">Våra produkter</h1>
</div>

<div class="row pb-3">
    @foreach(var product in Model){
        <div class="col-lg-4 col-md-6 col-sm-12 pb-3"> <!-- 4 kolumner för större skärmar, 6 för mellanstora och 12 för små -->
            <div class="row p-2">
                <div class="col-12 p-1">
                    <div class="card border-0 p-3 shadow border-top border-5 rounded">
                        <img src="@product.ImageUrl" class="card-img-top rounded">
                        <div class="card-body d-flex flex-column">
                            <div class="flex-fill">
                                <div class="pl-1">
                                    <p class="card-title h5 text-dark opacity-75 text-uppercase text-center">@product.Title</p>
                                    <p class="card-title text-warning text-center"> by <b>@product.Author</b></p>
                                </div>
                                <div class="pl-1">
                                    <p class="text-dark text-opacity-75 text-center font-weight-bold mb-0">Bulkköp: <span class="text-decoration-line-through">@product.Price</span>kr</p>
                                </div>
                                <div class="pl-1">
                                    <p class="text-dark text-opacity-75 text-center"> Från: <span>@product.Price100</span>kr</p>
                                </div>
                            </div>
                            <div class="mt-auto">
                                <a class="btn btn-primary my-gradient-btn btn-gradient form-control" asp-action="Details" asp-route-id="@product.Id">Läs mer</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>
