@model Product

<form method="post">
    <div class="card shadow border-0 mt-4">
        <div class="card-header bg-secondary text-light py-4">
            <h3 class="text-center text-uppercase text-dark">@Model.Title</h3>
            <p class="text-warning text-center fw-semibold mb-0">by @Model.Brand</p>
        </div>
        <div class="card-body">
            <div class="mb-3 d-flex justify-content-start">
                <a href="/admin/product/index" class="btn btn-outline-primary fw-semibold">Tillbaka</a>
            </div>
            <div class="row g-3 align-items-center">
                <div class="col-12 col-lg-4 text-center">
                    <img src="@Model.ImageUrl" class="img-fluid rounded" alt="Produktbild">
                </div>
                <div class="col-12 col-lg-8">
                    <div class="mb-3">
                        <span class="badge bg-dark">@Model.Category.Name</span>
                    </div>
                    <div class="mb-3">
                        <h6 class="text-muted">Tillverkare: @Model.Brand</h6>
                    </div>
                    <div class="mb-3">
                        <h6 class="text-muted">Pris: <span class="text-decoration-line-through">@Model.Price kr</span></h6>
                    </div>
                    <div class="row text-center">
                        <!-- Priser och kvantitetstabell -->
                        <div class="col bg-light p-2 fw-semibold">Kvantitet</div>
                        <div class="col bg-light p-2">1-5</div>
                        <div class="col bg-light p-2">6-10</div>
                        <div class="col bg-light p-2">10+</div>
                        <div class="w-100"></div>
                        <div class="col bg-warning p-2 fw-bold">Pris</div>
                        <div class="col bg-light p-2">@Model.ListPrice kr</div>
                        <div class="col bg-light p-2">@Model.Price50 kr</div>
                        <div class="col bg-light p-2">@Model.Price100 kr</div>
                    </div>
                    <div class="mt-3">
                        <p class="text-secondary">@Html.Raw(Model.Description)</p>
                    </div>
                    <div class="mb-3">
    <label for="shoeSize" class="form-label fw-semibold">Skostorlek</label>
    <select id="shoeSize" name="shoeSize" class="form-select" aria-label="Välj skostorlek">
        <option selected>Välj storlek</option>
        <option value="36">36</option>
        <option value="37">37</option>
        <option value="38">38</option>
        <option value="39">39</option>
        <option value="40">40</option>
        <option value="41">41</option>
        <option value="42">42</option>
        <option value="43">43</option>
        <option value="44">44</option>
        <option value="45">45</option>
        <option value="46">46</option>
        <option value="47">47</option>
        <option value="48">48</option>
    </select>
</div>

                    <div class="mb-3">
                        <label for="quantity" class="form-label fw-semibold">Antal</label>
                        <input id="quantity" type="number" value="1" class="form-control" aria-label="Antal">
                    </div>
                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary fw-semibold" disabled>Lägg till i kundvagn</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
