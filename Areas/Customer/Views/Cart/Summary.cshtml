

<form method="post">
    <br />
    <div class="container">
        <div class="card shadow border-0">
            
            <div class="card-header bg-secondary bg-gradient text-light ml-0 py-4">
                <div class="row px-4">
                    <div class="col-6">
                        <h5 class="pt-2 text-dark">
                            Kundvagn
                        </h5>
                    </div>
                <div class="col-6 text-end">
                    <a asp-action="index" class="btn btn-outline-danger btn-sm">Tillbaka till kundvagnen</a>
                </div>
                </div>
            </div>
            <div class="card-body">
                <div class="container rounded p-2">
                    <div class="row">
                        <div class="col-12 col-lg-6 pb-4">
                            <div class="row">
                                <h4 class="d-flex justify-content-between align-items-center mb-3">
                                    <span>Leveransuppgifter:</span>
                                </h4>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">
                                    <label>Namn</label>
                                </div>
                                <div class="col-9">
                                    <input  class="form-control" />
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">
                                    <label>Telefon</label>
                                </div>
                                <div class="col-9">
                                    <input  class="form-control" />
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">
                                    <label>Gatuadress</label>
                                </div>
                                <div class="col-9">
                                    <input  class="form-control" />
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">
                                    <label>Stad</label>
                                </div>
                                <div class="col-9">
                                    <input  class="form-control" />
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">
                                    <label>Län</label>
                                </div>
                                <div class="col-9">
                                    <input  class="form-control" />
                                </div>
                            </div>
                            <div class="row my-1">
                                <div class="col-3">
                                    <label>Postnummer</label>
                                </div>
                                <div class="col-9">
                                    <input  class="form-control" />
                                </div>
                            </div>
                        </div>
                        <div class="col-12 col-lg-5 offset-lg-1">
                            <h4 class="d-flex justify-content-between align-items-center mb-3">
                                <span>Orderöversikt:</span>
                            </h4>
                            <ul class="list-group mb-3">
                                <li class="list-group-item d-flex justify-content-between">
                                    <div>
                                        <h6 class="my-0">Titel</h6>
                                        <small class="text-muted">Antal: Antal</small>
                                    </div>
                                    <span class="text-muted">Pris * Antal</span>
                                </li>


                                <li class="list-group-item d-flex justify-content-between bg-light">
                                    <small>Totalt (SEK)</small>
                                    <strong>Kr</strong>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <div class="row">
                    <div class="col-12 col-md-8 pt-2">
                        <p style="color:maroon; font-size:14px;">Ankomstdatum:
                            
                        </p>
                    </div>
                    <div class="col-12 col-md-4">
                        <button type="submit" value="Place Order" class="btn btn-primary my-gradient-btn form-control">Genomför beställning</button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>
