@page
@model ShowRecoveryCodesModel
@{
    ViewData["Title"] = "Återställningskoder";
    ViewData["ActivePage"] = "TwoFactorAuthentication";
}

<partial name="_StatusMessage" for="StatusMessage" />
<h3>@ViewData["Title"]</h3>
<div class="alert alert-warning" role="alert">
    <p>
        <strong>Förvara dessa koder på en säker plats.</strong>
    </p>
    <p>
        Om du förlorar din enhet och inte har återställningskoderna kommer du att förlora tillgången till ditt konto.
    </p>
</div>
<div class="row">
    <div class="col-md-12">
        @for (var rad = 0; rad < Model.RecoveryCodes.Length; rad += 2)
        {
            <code class="recovery-code">@Model.RecoveryCodes[rad]</code><text>&nbsp;</text><code class="recovery-code">@Model.RecoveryCodes[rad + 1]</code><br />
        }
    </div>
</div>
