@page
@model ExternalLoginModel
@{
ViewData["Title"] = "Registrera";
}
<h1>@ViewData["Title"]</h1>
<h2 id="external-login-title">Associera ditt @Model.ProviderDisplayName-konto.</h2>
<hr />
<p id="external-login-description" class="text-info">
    Du har framgångsrikt autentiserats med <strong>@Model.ProviderDisplayName</strong>.
    Ange en e-postadress för denna webbplats nedan och klicka på Registrera-knappen för att slutföra
    inloggningen.
</p>
<div class="row">
    <div class="col-md-4">
        <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="email" placeholder="Ange din e-postadress."/>
                <label asp-for="Input.Email" class="form-label"></label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn my-gradient-btn btn-primary">Registrera</button>
        </form>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}