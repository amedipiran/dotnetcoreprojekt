@page
@model ExternalLoginModel
@{
ViewData["Title"] = "Registrera";
}
<h1>@ViewData["Title"]</h1>
<h2 id="external-login-title">Associera ditt @Model.ProviderDisplayName-konto.</h2>
<hr />
<p id="external-login-description" class="text-info">
    Du har framgångsrikt autentiserats med <strong>@Model.ProviderDisplayName</strong>.
    Ange en e-postadress för denna webbplats nedan och klicka på Registrera-knappen för att slutföra
    inloggningen.
</p>
<div class="row">
    <div class="col-md-4">
        <form asp-page-handler="Confirmation" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" autocomplete="email" placeholder="Ange din e-postadress."/>
                <label asp-for="Input.Email" class="form-label">E-post</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
             <div class="form-floating mb-3">
                <input asp-for="Input.PhoneNumber" class="form-control" autocomplete="PhoneNumber" placeholder="Ange ditt telefonnummer."/>
                <label asp-for="Input.PhoneNumber" class="form-label">Telefonnummer</label>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
                <div class="form-floating mb-3">
                <input asp-for="Input.Name" class="form-control" autocomplete="Name" placeholder="Ange ditt namn."/>
                <label asp-for="Input.Name" class="form-label">Namn</label>
                <span asp-validation-for="Input.Name" class="text-danger"></span>
            </div>
                <div class="form-floating mb-3">
                <input asp-for="Input.StreetAddress" class="form-control" autocomplete="StreetAddress" placeholder="Ange din Adress."/>
                <label asp-for="Input.StreetAddress" class="form-label">Adress</label>
                <span asp-validation-for="Input.StreetAddress" class="text-danger"></span>
            </div>
                <div class="form-floating mb-3">
                <input asp-for="Input.City" class="form-control" autocomplete="City" placeholder="Ange din stad."/>
                <label asp-for="Input.City" class="form-label">Stad</label>
                <span asp-validation-for="Input.City" class="text-danger"></span>
            </div>
                <div class="form-floating mb-3">
                <input asp-for="Input.State" class="form-control" autocomplete="State" placeholder="Ange din region."/>
                <label asp-for="Input.State" class="form-label">Län</label>
                <span asp-validation-for="Input.State" class="text-danger"></span>
            </div>
                <div class="form-floating mb-3">
                <input asp-for="Input.PostalCode" class="form-control" autocomplete="PostalCode" placeholder="Ange din postkod."/>
                <label asp-for="Input.PostalCode" class="form-label">Postkod</label>
                <span asp-validation-for="Input.PostalCode" class="text-danger"></span>
            </div>
             
            <button type="submit" class="w-100 btn my-gradient-btn my-gradient-btn btn-primary">Registrera</button>
        </form>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}