@page
@model LoginWithRecoveryCodeModel
@{
ViewData["Title"] = "Verifiering med återställningskod";
}
<h1>@ViewData["Title"]</h1>
<hr />
<p>
    Du har begärt att logga in med en återställningskod. Denna inloggning kommer inte att kommas ihåg tills du anger
    en kod från autentiseringsappen vid inloggning eller inaktiverar 2FA och loggar in igen.
</p>
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="Input.RecoveryCode" class="form-control" autocomplete="off" placeholder="Återställningskod" />
                <label asp-for="Input.RecoveryCode" class="form-label"></label>
                <span asp-validation-for="Input.RecoveryCode" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Logga in</button>
        </form>
    </div>
</div>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}